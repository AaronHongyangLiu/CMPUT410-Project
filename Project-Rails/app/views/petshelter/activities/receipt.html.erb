<% content_for :title do %>
  Receipt(id: "<%= @receipt.id %>") - PetShelter
<% end %>

<% content_for :nav do %>
  &nbsp;&nbsp;Current location:
  <%= link_to 'Home', action: 'events' %>&nbsp;&gt;&nbsp;Activities&nbsp;&gt;
  <%= link_to 'Receipts', action: 'act_receipts' %>
  &gt; <%= @receipt.id %>
<% end %>

<% content_for :content_block do %>
 <table>
  <% @receipt.attributes.each_pair do |name, value| %>
   <% if name != 'id' and name != 'created_at' and name != 'updated_at' %>
   <tr>
     <td class="key"><%= name %></td>
     <td class="value">
      <% if name == 'people_id' %>
       <%= link_to @receiver, action: 'staff', staff_id: @receiver %>
      <% elsif name == 'animal_id' %>
      <%= link_to @animal, action: 'animal', species: @animal.species, animal_id: @animal.animal_id %>
      <% else %>
       <%= value %>
      <% end %>
     </td>
   </tr>
   <% end %>
  <% end %>
 </table>
<% end %>

