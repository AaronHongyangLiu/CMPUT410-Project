<% content_for :title do %>
  Surrender(id: "<%= @surrender.id %>") - PetShelter
<% end %>

<% content_for :nav do %>
  &nbsp;&nbsp;Current location:
  <%= link_to 'Home', action: 'events' %>&nbsp;&gt;&nbsp;Activities&nbsp;&gt;
  <%= link_to 'Surrenders', action: 'act_surrenders' %>
  &gt; <%= @surrender.id %>
<% end %>

<% content_for :content_block do %>
 <table>
  <% @surrender.attributes.each_pair do |name, value| %>
   <% if name != 'id' and name != 'created_at' and name != 'updated_at' %>
   <tr>
     <td class="key"> <%= name %> </td>
     <td class="value">
      <% if name == 'people_id' %>
       <% if user_signed_in? %>
        <%= link_to @surrenderer, action: 'user', user_id: @surrenderer %>
       <% else %>
        <%= @surrenderer %>
       <% end %>
      <% elsif name == 'animal_id' %>
      <%= link_to @animal, action: 'animal', species: @animal.species, animal_id: @animal.animal_id %>
      <% else %>
       <%= value %>
      <% end %>
     </td>
   </tr>
   <% end %>
  <% end %>
 </table>
<% end %>

